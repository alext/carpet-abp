  "authors": [
    "gnembon, DeadlyMC, ImUrX, 2No2Name, ..."
  ],
  "contact": {
    "homepage": "https://github.com/alext/carpet-abp",
    "issues": "https://github.com/alext/carpet-abp/issues",
    "sources": "https://github.com/alext/carpet-abp"
  },

  "icon": "assets/carpet-abp/icon.png",

  "environment": "*",
